#include <stdio.h>

int main ()
{
    float nota1;
    float nota2;

    printf("Digite sua primeira nota:\n");
    scanf("%f", &nota1);
    printf("Digite sua segunda nota:\n");
    scanf("%f", &nota2);

    printf("Sua primeira nota foi %.2f e a sua segunda nota foi %.2f\n", nota1, nota2);

    float mediasimples = ((nota1 + nota2)/2);
    float mediaponderada = ((nota1 + nota2*2)/3);

    printf("A media simple foi %.2f\nE a media ponderada foi %.2f\n", mediasimples, mediaponderada);

    return 0;
}
